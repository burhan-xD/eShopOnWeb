@page "/admin/orders"
@attribute [Authorize(Roles = BlazorShared.Authorization.Constants.Roles.ADMINISTRATORS)]
@inherits BlazorAdmin.Helpers.BlazorComponent
@namespace BlazorAdmin.Pages.OrderPage




<PageTitle>eShopOnWeb Admin: All Orders</PageTitle>

<h3>AllOrderList</h3>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>User</th>
            <th>Total Price</th>
            <th>Order Status</th>
            <th>Order Detail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in orderList)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.BuyerId</td>
                <td>@order.TotalPrice</td>
                <td>@order.Status</td>
                <td>
                    <button class="btn btn-primary">
                        <a class="esh-orders-link" asp-controller="Order" asp-action="Detail">Detail</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
